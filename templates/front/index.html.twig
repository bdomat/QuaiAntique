{% extends 'base.html.twig' %}

{% block title %}Restaurant Quai Antique | Arnaud Michant

{% endblock %}
{% block meta %}
	<meta name="description" content="Restaurant 'Le Quai Antique' - Goûtez à la Savoie ! Découvrez notre carte, réservez une table et rencontrez notre chef Antoine Michant.">
{% endblock %}

{% block body %}

	<div class="top pt-50 text-center" id="home-top">
		<h1>Restaurant<br>"Le Quai Antique"</h1>
		<p class="m-3">Goûtez à la Savoie !</p>
		<a href="{{path('menu')}}">
			<button class="btn cta">
				Consulter notre carte
			</button>
		</a>
	</div>
	<div class="container">
		<section class="text-center" id="imageGallery">
			<div class="row m-5 justify-content-center">
				{% for image in images %}
					<div class="col-lg-4 p-2 focus-img">
						<img src="/assets/images/{{image.src}}" alt="{{image.title}} ">
						<div class="focus-title hidden">
							<h4>{{image.title}}</h4>
						</div>
					</div>
				{% endfor %}
			</div>
			<a href="{{path('booking')}}">
				<button class="btn cta">Réserver une table</button>
			</a>
		</section>
		<section class="text-center m-5" id="aboutUs">
			<h2 class="m-5">Notre chef</h2>
			<div class="row">
				<div class="col-lg-6 p-0">
					<img src="assets/images/chef-antoine-michant.jpg" alt="Le chef Arnaud Michant"></div>
				<div class="col-lg-6 p-5 d-grid">
