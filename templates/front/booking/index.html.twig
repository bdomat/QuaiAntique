{% extends 'base.html.twig' %}

{% block title %}Restaurant Quai Antique | Réserver
{% endblock %}
{% block meta %}
	<meta name="description" content="Envie de découvrir notre cuisine ? Réservez votre table en quelques secondes !">
{% endblock %}

{% block body %}
	<div class="bg-light py-5">
		<section class="container container-login">
			<div class="row">
				<div class="col action-form text-center">
					<h1 class="text-center">Réservation</h1>
					{% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
						<p>Vous ne possèdez pas encore de compte ?
							<br>Gagnez du temps lors de vos prochaines réservations !<br>
							<a href="{{path('app_register')}}">Créer un compte</a>
						</p>
					{% endif %}

					{{ form_start(form, {'attr': {'id': 'reservation_form'}}) }}
					{{ form_row(form.reservation_name) }}
					{{ form_row(form.reservation_phone) }}
					{{ form_row(form.guests_number) }}
					{{ form_row(form.allergies) }}
					{{ form_row(form.date_time, {
						'attr': {
							'data-target': '#reservation_form_date_time',
							'data-toggle': 'datetimepicker',
						}
					}) }}
					<p style="color: green;" id="remainingSeats"></p>
					<button type="submit" class="btn">Réserver</button>
					{{ form_end(form) }}
				</div>
			</div>
		</section>
	</div>
{% endblock %}
